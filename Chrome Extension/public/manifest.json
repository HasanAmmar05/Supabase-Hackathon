{
     "manifest_version": 3,
     "name": "Productive Grounds",
     "version": "1.0",
     "permissions": [
          "activeTab",
          "storage",
          "identity",
          "scripting",
          "tabs",
          "cookies",
          "notifications"
     ],
     "action": {
          "default_popup": "popup.html",
          "default_title": "YouTube Productivity Tracker"
     },
     "background": {
          "service_worker": "src/background.js"
     },
     "oauth2": {
          "client_id": "OUR_GOOGLE_OAUTH_CLIENT_ID",
          "scopes": [
               "https://www.googleapis.com/auth/userinfo.email",
               "https://www.googleapis.com/auth/userinfo.profile"
          ]
     },
     "host_permissions": [
          "*://*.googleapis.com/*",
          "*://our-backend-server.com/*",
          "*://youtube.com/watch*",
          "*://www.youtube.com/watch*",
          "http://localhost/*"
     ],
     "web_accessible_resources": [
          {
               "resources": [],
               "matches": ["<all_urls>"]
          }
     ]
}
