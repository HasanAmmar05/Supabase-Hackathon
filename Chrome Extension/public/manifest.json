{
     "manifest_version": 3,
     "name": "Productive Grounds",
     "version": "1.0",
     "permissions": [
          "activeTab",
          "storage",
          "scripting",
          "tabs",
          "cookies",
          "notifications"
     ],
     "action": {
          "default_popup": "popup.html",
          "default_title": "Productive Grounds"
     },
     "background": {
          "service_worker": "src/background.js"
     },
     "icons": {
          "16": "./icons/16.png",
          "32": "./icons/32.png",
          "48": "./icons/48.png",
          "128": "./icons/128.png"
     },
     "host_permissions": [
          "*://youtube.com/watch*",
          "*://www.youtube.com/watch*",
          "http://localhost/*"
     ]
}
